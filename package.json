{
  "name": "markdown-inline-editor-vscode",
  "displayName": "Markdown Inline Editor",
  "version": "1.1.1",
  "description": "WYSIWYG inline markdown editor - hide syntax, focus on content",
  "license": "MIT",
  "author": "SeardnaSchmid",
  "publisher": "CodeSmith",
  "private": true,
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/SeardnaSchmid/markdown-inline-editor-vscode.git"
  },
  "homepage": "https://github.com/SeardnaSchmid/markdown-inline-editor-vscode",
  "bugs": {
    "url": "https://github.com/SeardnaSchmid/markdown-inline-editor-vscode/issues"
  },
  "keywords": [
    "markdown",
    "wysiwyg",
    "inline",
    "editor",
    "preview",
    "syntax",
    "clean"
  ],
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Formatters",
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mdInline.toggleDecorations",
        "title": "Toggle Markdown Decorations",
        "icon": "$(eye)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "mdInline.toggleDecorations",
          "when": "editorLangId == markdown || editorLangId == md || editorLangId == mdx",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:report": "NODE_OPTIONS=--experimental-vm-modules jest && echo 'HTML report generated at: test-report/report.html'",
    "clean": "rimraf dist",
    "compile": "tsc --project tsconfig.build.json",
    "package": "vsce package --out dist/extension.vsix",
    "build": "npm run compile && npm run package",
    "prepublishOnly": "npm run clean && npm run build",
    "deploy:prod": "npm run clean && npm run build && vsce publish --packagePath dist/extension.vsix --pat $AZURE_DEVOPS_TOKEN && ovsx publish dist/extension.vsix --pat $OPEN_VSX_TOKEN"
  },
  "dependencies": {
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.4",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^20.1.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.5",
    "@types/unist": "^3.0.0",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "ovsx": "^0.9.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.4"
  }
}
